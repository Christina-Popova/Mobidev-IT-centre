<h3>Sign Up</h3>
<form id="signUp-form">
    <div class="row">
        <input type="text"  placeholder="Login" class="login">
    </div>
    <div class="row">
        <input type="password"  placeholder="Password" class="password">
    </div>
    <div class="row">
        <input type="email"  placeholder="Email" class="email">
    </div>
    <div class="row">
        <input type="submit" value="SignUp" class="btn-signup btn-style">
    </div>
</form>
<div class="row">
    <button class="signup-cancel btn-style">Cancel</button>
</div>
<div class="error"></div>